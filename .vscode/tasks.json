{

    // Multiple patterns currently don't work, so make sure each task outputs only ONE type of message.

    "version":"2.0.0",
    "tasks": [
        {
            "label": "meta-checks",
            "args": [
                "${file}"
            ],
            "type": "process",
            "presentation": {
                "echo": false,
                "reveal":"never",
                "panel": "shared",
                "close": false,
                "focus": false,
                "showReuseMessage": false
            },
            "command": "./checks/run_meta_check.py",
            "problemMatcher": {
                "severity": "info",
                "pattern": [
                    {
                        "regexp": "^::(notice|warning|error) file=(.*?),title=(.*?),col=([0-9]*),endColumn=([0-9]*),line=([0-9]*)::(.*)$",
                        "severity": 1,
                        "file": 2,
                        "code": 3,
                        "column": 4,
                        "endColumn": 5,
                        "line": 6,
                        "message": 7,
                        "loop": true
                    },
                ],
                "owner": "meta-check",
                "fileLocation": "autoDetect",
            },
            
        },
        {
            "label": "proselint-checks",
            "args": [
                "${file}"
            ],
            "type": "process",
            "presentation": {
                "echo": false,
                "reveal":"never",
                "panel": "shared",
                "close": false,
                "focus": false,
                "showReuseMessage": false
            },
            "command": "./checks/run_proselint.py",
            "problemMatcher": {
                "severity": "info",
                "pattern": {
                    "regexp": "^::(notice|warning|error) file=(.*?),line=([0-9]*),col=([0-9]*),endColumn=([0-9]*),title=(.*?)::(.*)$",
                    "severity": 1,
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "endLine": 5,
                    "message": 7,
                    "loop": true

                },
                "owner": "proselint",
                "fileLocation": "autoDetect",
            },
        },
        {
            "label": "spelling-checks",
            "args": [
                "${file}"
            ],
            "type": "process",
            "presentation": {
                "echo": false,
                "reveal":"never",
                "panel": "shared",
                "close": false,
                "focus": false,
                "showReuseMessage": false
            },
            "command": "./checks/run_pyspelling.py",
            "problemMatcher": {
                "severity": "info",
                "pattern": [{
                    "regexp": "^::(notice|warning|error) file=(.*?),line=([0-9]*),col=([0-9]*),endColumn=([0-9]*),title=(.*?)::(.*)$",
                    "severity": 1,
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "endLine": 5,
                    "message": 7
                }],
                "owner": "spelling",
                "fileLocation": "autoDetect",
            },
        },
        {
            "label": "build",
            "type": "shell",

            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal":"never",
                "panel": "shared",
                "close": false,
                "focus": false,
                "showReuseMessage": false
            },
            "command": "mkdocs serve --dirty",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": {
                "severity": "info",
                "pattern": [{
                    "regexp": "^(WARNING|INFO) -  Doc file '(.*)' (.*)$",
                    "severity": 1,
                    "file": 2,
                    "message": 3,
                    "kind": "file"
                }],
                "owner": "build",
                "background": {
                    "beginsPattern": "INFO    -  Building documentation...",
                    "endsPattern": "INFO    -  Documentation built in .*"
                },
                "fileLocation": "autoDetect",
            },
        // make this a problem matecher.
        //     INFO    -  [macros] - ERROR # _Macro Rendering Error_

        //    _File_: `Glossary.md`

        //    _TemplateNotFound_: assets/glossary/Glossary.md
        }
    ]
}
