{
    "editor.indentSize": "tabSize",
    "triggerTaskOnSave.on": true,
    "triggerTaskOnSave.tasks": {
        "meta-checks": [
            "docs/**/*.md",
            "checks/fail_checks.md"
        ],
        "proselint-checks": [
            "docs/**/*.md",
            "checks/fail_checks.md"
        ],
        "spelling-checks": [
            "docs/**/*.md",
            "checks/fail_checks.md"
        ],
        "slurm-lint": [
            "docs/**/*.md",
            "checks/fail_checks.md"
        ],
        "test-build": [
            "docs/**/*.md",
            "checks/fail_checks.md"
        ]
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5,
    "editor.renderWhitespace": "all",
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.lightbulb.enabled": "off",
    "editor.tabCompletion": "on",
    "files.insertFinalNewline": true,
    "workbench.commandPalette.experimental.suggestCommands": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    "scm.alwaysShowRepositories": true,
    "task.problemMatchers.neverPrompt": true,
    "problems.showCurrentInStatus": true,
    "git.autofetch": true,
    "git.branchRandomName.enable": true,
    "git.confirmSync": false,
    "git.pullBeforeCheckout": true,
    "git.enableSmartCommit": true,
    "git.postCommitCommand": "sync",
    "git.branchProtectionPrompt": "alwaysCommitToNewBranch",
    "git.branchProtection": ["main"],
    "yaml.extension.recommendations": false,
    "redhat.telemetry.enabled": false,
    "githubPullRequests.pushBranch": "always",
    "git.useEditorAsCommitInput": false,
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": "file:///workspaces/support-docs/.github/workflows/deploy.yml"
    },
    "markdown.copyFiles.destination": {
        "docs/**/*": "/docs/assets/images/"
    },
    "markdown.updateLinksOnFileMove.enabled":"prompt",
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": true,
        "editor.unicodeHighlight.invisibleCharacters": true,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.wordWrap": "on",
        "editor.suggest.preview": true,
        "editor.suggest.showUsers": false,
    },
}
